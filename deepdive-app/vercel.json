{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/issues/:id*",
      "destination": "/issues/[id]"
    },
    {
      "source": "/donation/:id*",
      "destination": "/donation/[id]"
    },
    {
      "source": "/((?!api|_next/static|_next/image|favicon.ico|issues|donation).*)",
      "destination": "/"
    }
  ],
  "functions": {
    "src/app/api/**/*.js": {
      "maxDuration": 30
    }
  }
} 